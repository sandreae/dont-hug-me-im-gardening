{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "dont-hug-me-im-gardening",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["$APPDATA/dont-hug-me-im-gardening/*"]
      },
      "dialog": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dont-hug-me-im-gardening",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]  
    },
    "cli": {
      "description": "Create and share hand crafted gardens and custom sprite sets. Powered by p2panda.",
      "args": [
        {
          "name": "load-sprite-set",
          "description": "Path to seed data file",
          "longDescription": "Relative path to seed data file containing entries to be loaded onto the node at runtime",
          "short": "s",
          "takesValue": true,
          "multiple": false
        },
        {
          "name": "peers",
          "description": "Addresses of known peers",
          "short": "p",
          "takesValue": true,
          "multiple": true
        },
        {
          "name": "relays",
          "description": "Addresses of relay nodes",
          "short": "r",
          "takesValue": true,
          "multiple": true
        }
      ]  
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Don't Hug Me I'm Gardening!",
        "maximized": true
      }
    ]
  }
}
